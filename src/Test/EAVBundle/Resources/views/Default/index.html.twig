{% extends 'base.html.twig' %}

{% block body %}
    <table class="records_list table table-bordered table-striped dataTable">
        <thead>
        <tr>
            <th class="sorting">Id</th>
            <th class="sorting">Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('test_eav_data_edit', { 'id': entity.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-danger" href="{{ path('test_eav_data_delete', { 'id': entity.id }) }}">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('test_eav_data_new') }}">Create new</a>
    <a class="btn btn-info" href="{{ path('enviroment_eav_homepage') }}">Add attribute</a>
{% endblock %}